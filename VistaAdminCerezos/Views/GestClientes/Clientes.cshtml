
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Gestiones</a></li>
    <li class="breadcrumb-item active">Clientes</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Lista de clientes
    </div>
    <div class="card-body">
        @*TABLA DE Clientes*@
        <table id="TablaClientes" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-black text-white">
                <h5 class="modal-title" id="exampleModalLabel">Clientes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @*Formulario para crear categoria*@
            <div class="modal-body">
                @*identificar el id de categoria*@
                <input id="txtid" type="hidden" value="0" />
                <div class="row g-1">

                    <div class="col-sm-6">
                        <label for="txtnombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtnombre" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtapellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="txtapellido" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtemail" class="form-label">Email</label>
                        <input type="text" class="form-control" id="txtemail" autocomplete="off">
                    </div>

                </div>
                @*Mensaje de alerta*@
                <div class="row mt-3">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>


@*Escribir nuestros scripts*@
@section scripts{
    <script>

        var tabladata;
        var filaSeleccionada;

        /*EJEMPLOS PARA LOS DEMAS*/
            @*jQuery.ajax({
                 url: '@Url.Action("ListarUsuarios", "Home")',
                 type: "GET",
                 data: null,
                 dataType: "json",
                 contentType: "application/json; charset=utf-8",
                 success: function (data) {
                     console.log(data)
                 },
                 error: function (error) {
                     console.log(error)
                 },
                 beforeSend: function () {

                 },
         });*@

        tabladata = $("#TablaClientes").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarClientes", "GestClientes")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "Nombre" },
                { "data": "Apellido" },
                { "data": "Email" },
                

                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "90px",
                }

            ],
            //Idioma de datatable
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/2.0.7/i18n/es-MX.json"
            }
        });

        //Funcion para abrir formulario modal
        function abrirModal(json) {

            //Para limpiar campos al crear
            $("#txtid").val(0);
            $("#txtnombre").val("");
            $("#txtapellido").val("");
            $("#txtemail").val("");
            $("#mensajeError").hide();

            if (json != null) {
                $("#txtid").val(json.IDCategoria);
                $("#txtnombre").val(json.Nombre);
                $("#txtapellido").val(json.Apellido);
                $("#txtemail").val(json.Email);
            }

            $("#FormModal").modal("show");
        }

        //Funcion boton editar
        $("#TablaClientes tbody").on("click",'.btn-editar', function () {
            filaSeleccionada = $(this).closest("tr");
            var data = tabladata.row(filaSeleccionada).data();
            console.log(data);
            //Recibe la informacion el modal
            abrirModal(data)

        })

        //Funcion boton eliminar
        $("#TablaClientes tbody").on("click", '.btn-eliminar', function () {
            var ClienteSeleccionado = $(this).closest("tr");
            var data = tabladata.row(ClienteSeleccionado).data();
            //Advertencia
            swal({
                title: "¿Esta Seguro?",
                text: "¿Desea eliminar el cliente?'",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarCliente", "GestClientes")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IDCliente }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            /*debugger;*/

                            if (data.resultado) {
                                tabladata.row(ClienteSeleccionado).remove().draw();
                            } else {
                                swal("No se pudo eliminar", data.mensaje, "error")
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        },
                    });
                });

            console.log(data);

        })

    </script>
}


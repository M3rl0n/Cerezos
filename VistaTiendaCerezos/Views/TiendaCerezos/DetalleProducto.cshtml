@model VistaEntidad.ProductosCerezos
@{
    ViewBag.Title = "DetalleProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            @*Conectarse a la imagen*@
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="data:image/@Html.DisplayTextFor(m => m.Extension);base64,@Html.DisplayTextFor(m=>m.Base64)" alt="..." /></div>
            <div class="col-md-6">
                 @*Categoria*@
                <div class="small mb-1">Categoria Producto: @Html.DisplayTextFor(m => m.oCategoria.Nombre)</div>
                @*Producto*@
            <h1 class="display-5 fw-bolder">@Html.DisplayTextFor(m => m.Nombre)</h1>
                <div class="fs-5 mb-5">
                    @*<span class="text-decoration-line-through">$45.00</span>*@
                    @*Precio*@
                    <span>@Html.DisplayTextFor(m => m.Precio) COL</span>
                </div>
                @*Descripcion*@
                <p class="lead">@Html.DisplayTextFor(m => m.Descripcion)</p>
                <div class="d-flex">
                    <a href="@Url.Action("Index","TiendaCerezos")" class="btn btn-danger w-50 text-center me-3">
                        <i class="fas fa-undo-alt"></i>Regresar
                    </a>

                    <button class="btn btn-success agregarcarrito flex-shrink-0 w-50" type="button" data-IDProducto="@Html.DisplayTextFor(m => m.IDProducto)">
                        <i class="fas fa-cart-plus"></i>
                        Agregar al carrito
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

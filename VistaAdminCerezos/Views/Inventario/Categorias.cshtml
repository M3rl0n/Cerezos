
@{
    ViewBag.Title = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Gestiones</a></li>
    <li class="breadcrumb-item active">Categoria Productos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Lista de categoria de productos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-outline-success" onclick="abrirModal(null)">Crear categoria</button>
            </div>
        </div>
        <hr />
        @*TABLA DE Categorias*@
        <table id="TablaUsuarios" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-black text-white">
                <h5 class="modal-title" id="exampleModalLabel">Categoria de productos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @*Formulario para crear categoria*@
            <div class="modal-body">
                @*identificar el id de categoria*@
                <input id="txtid" type="hidden" value="0" />
                <div class="row g-1">

                    <div class="col-sm-6">
                        <label for="txtnombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtnombre" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="cboactivo" class="form-label">Activo</label>
                        <select id="cboactivo" class="form-select">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>

                </div>
                @*Mensaje de alerta*@
                <div class="row mt-3">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>


@*Escribir nuestros scripts*@
@section scripts{
    <script>

        var tabladata;
        var filaSeleccionada;

        /*EJEMPLOS PARA LOS DEMAS*/
            @*jQuery.ajax({
                 url: '@Url.Action("ListarUsuarios", "Home")',
                 type: "GET",
                 data: null,
                 dataType: "json",
                 contentType: "application/json; charset=utf-8",
                 success: function (data) {
                     console.log(data)
                 },
                 error: function (error) {
                     console.log(error)
                 },
                 beforeSend: function () {

                 },
         });*@

        tabladata = $("#TablaUsuarios").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarCategoriasProd", "Inventario")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "Nombre" },
                {
                    "data": "Activo", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">Si</span>'
                        } else {
                            return '<span class="badge bg-danger">No</span>'
                        }
                    }
                },

                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "90px",
                }

            ],
            //Idioma de datatable
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/2.0.7/i18n/es-MX.json"
            }
        });

        //Funcion para abrir formulario modal
        function abrirModal(json) {

            //Para limpiar campos al crear
            $("#txtid").val(0);
            $("#txtnombre").val("");
            $("#cboactivo").val(1);
            $("#mensajeError").hide();

            if (json != null) {
                $("#txtid").val(json.IDCategoria);
                $("#txtnombre").val(json.Nombre);
                $("#cboactivo").val(json.Activo == true ? 1 : 0); //si es true 1 y si no 0
            }

            $("#FormModal").modal("show");
        }

        //Funcion boton editar
        $("#TablaUsuarios tbody").on("click",'.btn-editar', function () {
            CategoriaProdSeleccionado = $(this).closest("tr");
            var data = tabladata.row(CategoriaProdSeleccionado).data();
            console.log(data);
            //Recibe la informacion el modal
            abrirModal(data)

        })

        //Funcion boton eliminar
        $("#TablaUsuarios tbody").on("click", '.btn-eliminar', function () {
            var CategoriaProdSeleccionado = $(this).closest("tr");
            var data = tabladata.row(CategoriaProdSeleccionado).data();
            //Advertencia
            swal({
                title: "¿Esta Seguro?",
                text: "¿Desea eliminar la categoria de producto?'",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarCategoriaProd", "Inventario")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IDCategoria }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            /*debugger;*/

                            if (data.resultado) {
                                tabladata.row(CategoriaProdSeleccionado).remove().draw();
                            } else {
                                swal("No se pudo eliminar", data.mensaje, "error")
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        },
                    });
                });

            console.log(data);

        })

        //funcion para guardar los datos
        function Guardar() {
            var Categoria = {
                IDCategoria: $("#txtid").val(),
                Nombre: $("#txtnombre").val(),
                Activo: $("#cboactivo").val() == 1 ? true : false, //condicional para devolver bool        
            };

            jQuery.ajax({
                url: '@Url.Action("GuardarCategoriaProd", "Inventario")',
                type: "POST",
                data: JSON.stringify({ objeto: Categoria }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide");

                    //Categoria producto nuevo
                    if (Categoria.IDCategoria == 0) {

                        if (data.resultado != 0) {
                            Categoria.IDCategoria = data.resultado;
                            tabladata.row.add(Categoria).draw(false);
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }

                    //Categoria producto ACTUALIZAR
                    } else {
                        if (data.resultado) {
                            tabladata.row(filaSeleccionada).data(Categoria).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide");
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("Show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    })
                }
            });
        }

    </script>
}


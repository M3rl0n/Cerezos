
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">BIENVENIDOS A CEREZOS</h1>
            <p class="lead fw-normal text-white-50 mb-0">DESCUBRE NUESTRA COLECCIÓN</p>
        </div>
    </div>
</header>
<!-- Section-->
<section>
    <div class="container-fluid px-5 my-5">
        @*Filtro para categoria de productos*@

        <div class="row">
            <div class="col-sm-3">
                <div class="row mb-3">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header bg-dark text-white">
                                Categorias Productos
                            </div>
                            <div id="contenedor_categoria" class="card-body">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-12">
                        <div class="d-grid gap-2">
                            <button id="btnaplicarfiltro" class="btn btn-outline-dark btn-block" type="button">
                                <i class="fas fa-filter"></i>Aplicar Filtros
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-9">
                <div id="conetenedor_productos" class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">Fancy Product</h5>
                                    <!-- Product price-->
                                    $40.00 - $80.00
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">View options</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <!-- Product image-->
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">Special Item</h5>
                                    <!-- Product reviews-->
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>
                                    <!-- Product price-->
                                    <span class="text-muted text-decoration-line-through">$20.00</span>
                                    $18.00
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section scripts{

    <script>

        $(document).ready(function () {
            MostrarCategoriasProd()
            MostrarProductos(0);
        })

        //Mostrar categorias de productos

        function MostrarCategoriasProd() {

            jQuery.ajax({
                url: "@Url.Action("ListarCategoriasProductos", "TiendaCerezos")",
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {

                    $("#contenedor_categoria").LoadingOverlay("hide");

                    $("<div>").addClass("form-check").append(
                        $("<input>").addClass("form-check-input").attr({ "type": "radio", "name": "categoria", "value": "0", "id": "cx", "checked": "checked" }),
                        $("<label>").addClass("form-check-label").text("Todos").attr({ "for":"cx"})
                    ).appendTo("#contenedor_categoria")

                    $.each(response.data, function (i, element) {
                        $("<div>").addClass("form-check").append(
                            $("<input>").addClass("form-check-input").attr({ "type": "radio", "name": "categoria", "value": element.IDCategoria, "id": "c" + i}),
                            $("<label>").addClass("form-check-label").text(element.Nombre).attr({ "for": "c" + i })
                        ).appendTo("#contenedor_categoria")

                    })

                },
                beforeSend: function () {
                    $("#contenedor_categoria").LoadingOverlay("show");
                }

            })
        }


        //Mostrar productos en el html

        function MostrarProductos(_IDCategoria) {

            jQuery.ajax({
                url: "@Url.Action("ListarProductos", "TiendaCerezos")",
                type: "POST",
                data: JSON.stringify({IDCategoria: _IDCategoria}),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    $("#conetenedor_productos").html("");
                    $("#conetenedor_productos").LoadingOverlay("hide");

                    $.each(response.data, function (i, element) {
                        $("<div>").addClass("col mb-5").append(
                            $("<div>").addClass("card h-100").append(
                                $("<img>").addClass("card-img-top").attr({ "src": "data:image/" + element.Extension + ";base64," + element.Base64 }),
                                $("<div>").addClass("card-body p-4").append(
                                    $("<div>").addClass("text-center").append(
                                        $("<h5>").addClass("fw-bolder").text(element.Nombre),
                                        "$" + element.Precio.toFixed(2) + "COL"
                                    )

                                ),
                                $("<div>").addClass("card-footer p-2 pt-0 border-top-0 bg-transparent").append(
                                    $("<div>").addClass("d-grid gap-2").append(
                                        $("<button>").addClass("btn btn-success mt-auto agregarcarrito").data("IDProducto", element.IDProducto).text("Agregar al carrito"),
                                        $("<a>").addClass("btn btn-dark mt-auto")
                                            .attr({ "href": "@Url.Action("DetalleProducto","TiendaCerezos")" + "?IDProducto=" + element.IDProducto })
                                            .text("Ver detalle")
                                    )
                                )
                            )
                        ).appendTo("#conetenedor_productos")

                    })

                },
                beforeSend: function () {
                    $("#conetenedor_productos").LoadingOverlay("show");
                }

            })

        }

        $("#btnaplicarfiltro").click(function () {
            var _IDCategoria = $("input[name=categoria]:checked").val()
            MostrarProductos(_IDCategoria)
        })

        //Funcion para agregar al carrito

        $(document).on("click", "button.agregarcarrito", function () {
            console.log($(this).data("IDProducto"))

            jQuery.ajax({
                url: '@Url.Action("AgregarCarrito", "TiendaCerezos")',
                type: "POST",
                data: JSON.stringify({ IDProducto: $(this).data("IDProducto") }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.respuesta) {
                        MonstrarCantidadCarrito();

                        swal({
                            title: "Agreado al carrito",
                            text: "¿Desea ir al carrito?",
                            type: "success",
                            showCancelButton: true,
                            confirmButtonClass: "btn-primary",
                            confirmButtonText: "SI",
                            cancelButtonText: "NO",
                            closeOnConfirm: true,
                        }, function () {
                            window.location.href = '@Url.Action("Carrito","TiendaCerezos")'
                        })
                    } else {
                        swal("", data.mensaje, "warning");
                    }
                }
            });


        })



    </script>


}
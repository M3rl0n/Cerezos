@{
    ViewBag.Title = "Home Page";
}

<h1 class="mt-4">Dashboard</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Dashboard</li>
</ol>

<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Total Clientes</h6>
                        <h6 id="totalcliente">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-user fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Total Solicitudes</h6>
                        <h6 id="totalsolicitudes">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-address-book fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Total Ventas</h6>
                        <h6 id="totalventas">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-shopping-bag fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card bg-secondary text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Total Productos</h6>
                        <h6 id="totalproductos">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-boxes fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-tags me-1"></i>
        Historial de ventas
    </div>
    <div class="card-body">
        @*ETIQUETAS*@
        <form>
            <div class="row align-items-end">
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha de inicio:</label>
                        <input class="form-control" type="text" id="txtfechainicio" name="fechainicio" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha de fin:</label>
                        <input class="form-control" type="text" id="txtfechafin" name="fechafin" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">ID Transaccion:</label>
                        <input class="form-control" type="text" id="txtidtransaccion" name="transaccion" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-primary" id="btnbuscar" type="button"><i class="fas fa-search"></i>Buscar</button>
                    </div>
                </div>
                @*Incorporar excel?*@
            </div>
        </form>
        <hr />
        @*TABLA DE VENTAS*@
        <div class="row">
            <div class="col-sm-12">
                <table id="TablaVentas" class="display cell-border" style="width:100%">
                    <thead>
                        <tr>
                            <th>Fecha Venta</th>
                            <th>Cliente</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th>ID Transaccion</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>

@section scripts{
    <script>

        var tabladata;

        $(document).ready(function () {

        //Funcionalidad de calendario - fecha prede
        $("#txtfechainicio").datepicker({dateFormat: 'dd/mm/yy'}).datepicker('setDate', new Date());
        $("#txtfechafin").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date());

        //Llenar etiquetas dashboard
        jQuery.ajax({
            url: '@Url.Action("VistaDashboard", "Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                var objeto = data.resultado;
               $("#totalcliente").text(objeto.TotalClientes)
                $("#totalsolicitudes").text(objeto.TotalSolicitudes)
                $("#totalventas").text(objeto.TotalVenta)
                $("#totalproductos").text(objeto.TotalProductos)
            }
        })

        //Filtro de busqueda de ventas

        //string fechainicio, string fechafin, string idtransaccion

        var Url = '@Url.Action("ListaReporteVentas", "Home")' +
            "?fechainicio=" + $("#txtfechainicio").val()+
            "&fechafin=" + $("#txtfechafin").val()+
            "&idtransaccion=" + $("#txtidtransaccion").val()

            //TABLA

            tabladata = $("#TablaVentas").DataTable({
                responsive: true,
                ordering: false,
                "ajax": {
                    url: Url,
                    type: "GET",
                    dataType: "json"
                },
                "columns": [
                    { "data": "FechaVenta" },
                    { "data": "Cliente" },
                    { "data": "Producto"},
                    { "data": "Precio"},
                    { "data": "Cantidad"},
                    { "data": "Total"},
                    { "data": "IDTransaccion"}
                ],
                //Idioma de datatable
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/2.0.7/i18n/es-MX.json"
                }
            });


        })

        //Function para el boton buscar
        $("#btnbuscar").on("click", function () {
            var NuevaUrl = '@Url.Action("ListaReporteVentas", "Home")' +
            "?fechainicio=" + $("#txtfechainicio").val()+
            "&fechafin=" + $("#txtfechafin").val()+
            "&idtransaccion=" + $("#txtidtransaccion").val()

            tabladata.ajax.url(NuevaUrl).load();

        })



    </script>
}